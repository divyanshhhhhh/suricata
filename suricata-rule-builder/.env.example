# Suricata Rule Builder - Environment Configuration Example
# Copy this file to .env and adjust values as needed

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
# For production, set to 'production'

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5500
DEBUG=True

# Rules File Location
# Default: /etc/suricata/rules/custom.rules (falls back to ./custom.rules)
RULES_FILE=/etc/suricata/rules/custom.rules

# Suricata Configuration
SURICATA_BINARY=/usr/bin/suricata
# Set to the path where suricata binary is installed

# Service Reload Command
# Options: systemctl, service, or killall
SERVICE_RELOAD_METHOD=systemctl

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security (for future authentication features)
SECRET_KEY=change-this-to-a-random-secret-key
# Generate with: python -c 'import secrets; print(secrets.token_hex(32))'

# API Rate Limiting (for future implementation)
RATE_LIMIT_ENABLED=False
RATE_LIMIT_PER_MINUTE=60

# Backup Configuration
AUTO_BACKUP=True
BACKUP_DIR=./backups
MAX_BACKUPS=10
